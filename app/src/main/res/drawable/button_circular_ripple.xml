<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 1. PRESSED STATE -->
    <item android:state_pressed="true">
        <!-- Use a layer-list to combine ripple and border together -->
        <layer-list>
            <!-- Layer 1: Button background -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/buttons_background_color" />
                    <corners android:radius="12dp" />
                </shape>
            </item>

            <!-- Layer 2: Outer border shown when pressed -->
            <item>
                <shape android:shape="rectangle">
                    <!-- Make the shape just a border -->
                    <solid android:color="@android:color/transparent" />
                    <!-- Border thickness and color -->
                    <stroke android:width="2dp" android:color="@android:color/white" />
                    <!-- Corner radius -->
                    <corners android:radius="12dp" />
                </shape>
            </item>

            <!-- Layer 3: Ripple animation drawn on top -->
            <item>
                <ripple android:color="#0E166FF7"> <!-- Ripple color -->
                    <item android:id="@android:id/mask">
                        <inset
                            android:insetLeft="4dp"
                            android:insetTop="8dp"
                            android:insetRight="4dp"
                            android:insetBottom="8dp">
                            <shape android:shape="rectangle">
                                <solid android:color="@android:color/white" />
                                <corners android:radius="60dp" />
                            </shape>
                        </inset>
                    </item>
                </ripple>
            </item>
        </layer-list>
    </item>

    <!-- 2. NORMAL STATE -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/buttons_background_color" />
        </shape>
    </item>

</selector>
