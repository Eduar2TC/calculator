<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/text_view_color</item> <!-- anaranjado fuerte -->
        <item name="colorPrimaryVariant">@color/text_view_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/buttons_operators_top_color</item> <!-- anaranjado suave -->
        <item name="colorSecondaryVariant">@color/buttons_operators_top_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_app_bar_background_color</item>
        <!-- Navigation bar color claro para que los iconos sean visibles en modo dÃ­a -->
        <item name="android:navigationBarColor">@android:color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:colorControlNormal">@color/text_view_color</item>
        <item name="android:colorControlActivated">@color/buttons_operators_right_color</item>
        <item name="android:colorControlHighlight">@color/buttons_operators_top_color</item>
        <item name="colorAccent">@color/text_view_color</item>
        <!-- Overflow menu -->
        <item name="actionOverflowMenuStyle">@style/overflow_menu</item>
        <item name="toolbarStyle">@style/toolbar</item>
        <item name="actionBarStyle">@style/action_bar</item>
        <!-- me item text color in overflow menu -->
        <item name="android:itemTextAppearance">@style/custom_menu_item</item>
        <!-- overflow icon color -->
        <item name="actionOverflowButtonStyle">@style/overflow_menu_icon</item>
    </style>

    <!-- SETTINGS ACTIVITY -->
    <!-- Toolbar style for Settings activity -->
    <style name="AppTheme.Settings" parent="Theme.AppCompat.NoActionBar">
        <!-- Scroll view background color -->
        <item name="android:navigationBarColor">@android:color/white</item>
    </style>


</resources>