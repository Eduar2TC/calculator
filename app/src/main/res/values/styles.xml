<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!---item text color for overflow menu-->
    <style name="custom_menu_item" parent="TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/overflow_menu_item_text_color</item>
    </style>
    <!-- popup menu style for overflow menu -->
    <style name="overflow_menu" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:popupBackground">@drawable/draw_overflow_menu</item>
        <item name="android:dropDownHorizontalOffset">-16dp</item>
        <item name="android:dropDownVerticalOffset">16dp</item>
        <item name="android:popupElevation">8dp</item>
    </style>
    <!-- toolbar style -->
    <style name="toolbar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/toolbar_background_color</item>
    </style>
    <!-- action bar style -->
    <!--height is set to 35dp to match the height of the status bar-->
    <style name="action_bar" parent="Theme.MaterialComponents.DayNight.DarkActionBar" >
        <item name="height">35dp</item>
        <item name="android:background">@color/status_app_bar_background_color</item>
    </style>
    <!-- custom color overflow icon-->
    <style name="overflow_menu_icon" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">#000</item>
    </style>
    <!-- dialog style -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/dialog_title_color</item>
        <item name="android:background">@drawable/dialog_bg</item>
        <item name="color">@color/dialog_bg_color</item>
    </style>
</resources>
